<div id="content">
<style>
html {
	overflow-y:scroll;
}
body {
	text-rendering: geometricPrecision;
}
label.col-form-label span:after {
	font-family: FontAwesome;
	color: #1E91CF;
	content: "\f059";
	margin-left: 4px;
}
#spinner.active {
  border: 4px solid #80b1cb; /* Light grey */
  border-top: 4px solid #1E91CF; /* Blue */
  border-radius: 50%;
  width: 24px;
  height: 24px;
  display: block;
  position: absolute;
  animation: spin 1s linear infinite;
}
#data_source_form {
	position: relative;
	/* margin:0; */
}
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
@keyframes color {
  0% { background: rgba(6,6,6,0) }
  100% { background: rgba(6,6,6,.2); }
}
#content .panel-body{
	padding-top:0px;
	padding-bottom:0px;
}
.btn, input, select {
	/* outline: none !important; */
}
.card-body {
	padding: 0px 11px;
}

/* #form-module .col-form-label {
	padding-top:0;
} */
#form-module .form-group {
	padding-top: 10px;
	padding-bottom: 10px;
	display: flex;
	align-items: center;
	/* border-left: 5px solid #dfdfdf; */
}
#form-module .form-control:read-only{
	/* background: #fff; */
}
#data_source_form.form-group + .form-group {
	border-top: 1px dashed #c1c1c1;
}
.form-group + #data_source_form.form-group {
	border-top: 1px dashed #c1c1c1;
}
.form-group + .form-group {
	border-top: 1px solid #ededed;
}
#data_source_form.form-group + .form-group {
	border-top: 1px dashed #c1c1c1;
}
.form-group#data_source_form{
	/* margin: 0px -15px 0px -15px; */
	padding:0px;
	/* margin:0; */
	display: block;
}
#data_source_form .form-group {
	/* margin-left:-5px; */
	margin:0;
	padding: 10px 0px;
}
#form-module .well-sm {
	padding: 7px;
	margin-bottom:10px;
	max-height:200px;
	overflow-y:scroll;
	min-height:36.56px!important;
	background: #fff;
	border: 1px solid #ced4da;
	border-radius: 0.2308rem;
}
#dynamic_description .well-sm {
	width: 100%;
	display: block;
}
#form-module .well-sm .checkbox {
	min-height:unset;
	padding-top: 0px;
	padding-bottom: 0;
	border: 0;
}
#form-module .well-sm .checkbox label {
	display: flex;
	justify-content: flex-start;
	align-items: center;
	/* padding-left: 15px; */
}
#form-module .well-sm .checkbox label input[type="checkbox"] {
	margin-right: 5px;
}
#form-module .well-sm .table {
	margin: 0;
}
#form-module .well-sm .table tbody tr {
	background:none;
}
#form-module .switch input[type="radio"] {
	display:none;
}
#form-module .form-group[data-section="pmp"] {
	background-color: #f4ffed;
	border-left: 5px solid #b1db95;
}
#form-module .form-group[data-section="compatibility"] {
	background-color: #f7f2ff;
	border-left: 5px solid #c4a0ff;
}
#form-module .form-group[data-section="default"] {
	background-color: #fff;
	border-left: 5px solid #dfdfdf;
}
#form-module input[name="products_search"] {
	margin-bottom: 5px!important;
}
option[value="rd_recommendation"],option[value="rd_similar"] {
	color:#3f3;
}
